{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "redirects": [
    {
      "source": "/:course(algo|c_cpp|python|reseaux|stats|fbd|merise|algebre|ato)/chapitres/chapitre:num([2-9]|[1-9][0-9]+).html",
      "missing": [{ "type": "cookie", "key": "auth_token" }],
      "destination": "/_auth/activate.html?redirect=/:course/chapitres/chapitre:num.html&course=:course",
      "permanent": false
    },
    {
      "source": "/:course(algo|c_cpp|python|reseaux|stats|fbd|merise|algebre|ato)/exercices/:path+",
      "missing": [{ "type": "cookie", "key": "auth_token" }],
      "destination": "/_auth/activate.html?redirect=/:course/exercices/:path&course=:course",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "Referrer-Policy", "value": "no-referrer" }
      ]
    },
    {
      "source": "/_auth/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=604800, immutable" }
      ]
    },
    {
      "source": "/:course(algo|c_cpp|python|reseaux|stats|fbd|merise|algebre|ato)/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=86400, immutable" }
      ]
    }
  ]
}
